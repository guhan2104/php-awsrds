CREATE TABLE users (
    id INT AUTO_INCREMENT PRIMARY KEY,
    email VARCHAR(255) NOT NULL,
    username VARCHAR(255) NOT NULL,
    password VARCHAR(255) NOT NULL
);


SELECT * FROM users;

CREATE USER 'your_user'@'%' IDENTIFIED BY 'your_password';
